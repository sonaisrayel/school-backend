                main(role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4")
                h3 ՄԱՍՆԱԳԻՏՈՒԹՅՈՒՆՆԵՐ                  
                    <br/>
                    .profession-div_1
                        .a 
                            table(class='profession-table')                           
                                tr
                                    th(class='profession-th') #
                                    each val in profession 
                                        td(class='profession-td')= val.id 
                                tr
                                    th(class='profession-th') ՄԱՍՆԱԳԻՏՈՒԹՅՈՒՆ
                                    each val in profession
                                        td(class='profession-td')= val.profession
                                tr
                                    th(class='profession-th') ՖԱԿՈՒԼՏԵՏ
                                    each val in profession
                                        td(class='profession-td')= val.faculty
                                tr
                                    th(class='profession-th') ԿՈՒՐՍ
                                    each val in profession
                                        td(class='profession-td')= val.study_year
                                tr
                                    th(class='profession-th') ՈՒՍՄԱՆ ՎՃԱՐ
                                    each val in profession                        
                                        td(class='profession-td')= val.pay
